                <Button Content="Delete" Name="DeleteButton" Visibility="Collapsed" Click="DeleteButton_Click"></Button> <Button Content="Save" Name="SaveButton" Click="SaveButton_Click"></Button>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Grid>
   
